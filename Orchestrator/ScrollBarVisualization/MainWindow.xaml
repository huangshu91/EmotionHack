<Window
        x:Class="ScrollBarVisualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:ScrollBarVisualization"
    
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:PieViewModel/>
    </Window.DataContext>
    <Grid>
        <Slider x:Name="slider" HorizontalAlignment="Left" Height="20" Margin="10,289,0,0" VerticalAlignment="Top" Width="497" RenderTransformOrigin="0.518,4.4"/>

        <!-- <oxy:HeatMapSeries HorizontalAlignment="Left" Height="274" Margin="10,10,0,0" VerticalAlignment="Top" Width="497"/> -->
        <oxy:PlotView Model="{Binding MyModel}" Height="274" Margin="10,10,0,0" VerticalAlignment="Top" Width="497"/>
        
    </Grid>
</Window>
